 NewScrollBar←{
     ⍝ ⍵ ←→ 'v-scrollbar' or 'h-scrollbar'
     s←⍺ A.New'div'
     s.class←'scrollbar ',⍵
     s.Horz←⍵≡'h-scrollbar'
     s.Vert←⍵≡'v-scrollbar'
     s.TopLeft←0
     s.TopOrLeft←s.Horz⊃'top' 'left'
     s.Dragging←0
     s.Onmousedown←A.FQP'OnMouseDown'
     s.Onmouseup←A.FQP'OnMouseUp'
     s.Onmousemove←A.FQP'OnMouseMove'
     t←s A.New'div'
     t.class←'thumb'
     s
 }
